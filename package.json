{
  "name": "node-duckdb",
  "version": "1.0.5",
  "license": "MIT",
  "main": "src/hello.js",
  "private": false,
  "scripts": {
    "build": "yarn build:addon && yarn build:ts",
    "build:addon": "rimraf build && cmake-js compile",
    "build:test:watch": "nodemon --exec 'yarn build && yarn jest --watchAll'",
    "build:ts": "rimraf dist && tsc",
    "lint": "yarn prettier:check && eslint --ext .js,.json,.ts ./",
    "lint:fix": "yarn lint --fix",
    "prettier:check": "prettier --check '**/*.{js,json,md,ts,yml}'",
    "prettier:fix": "prettier --write '**/*.{js,json,md,ts,yml}'",
    "test": "jest"
  },
  "author": "DeepCrawl",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/deepcrawl/node-duckdb.git",
    "directory": "node-duckdb"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@types/bindings": "^1.3.0",
    "bindings": "^1.5.0",
    "node-addon-api": "^2.0.2"
  },
  "devDependencies": {
    "@deepcrawl/eslint-config": "^5.0.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "cmake-js": "^6.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-array-func": "^3.1.6",
    "eslint-plugin-clean-code": "^0.1.12",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "jest": "^26.2.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">= 12.11.0"
  }
}
